<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="ButtonWarningStyler" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">


        <Setter Property="Foreground" Value="{StaticResource LightFontColor}" />
        <Setter Property="Background" Value="{StaticResource ColorWarning}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">

                    <Border Padding="{TemplateBinding Padding}" CornerRadius="5" x:Name="MyBorder" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>

                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True" >

                            <Setter Property="Background" Value="{StaticResource ColorWarningHover}"/>

                        </Trigger>


                    </ControlTemplate.Triggers>



                </ControlTemplate>
            </Setter.Value>
        </Setter>


    </Style>




</ResourceDictionary>