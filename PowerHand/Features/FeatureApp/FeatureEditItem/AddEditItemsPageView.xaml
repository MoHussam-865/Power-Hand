<UserControl x:Class="Power_Hand.Features.FeatureApp.FeatureEditItem.AddEditItemsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:feature_items_navigation="clr-namespace:Power_Hand.Features.FeatureApp.FeatureCasher"
             xmlns:feature="clr-namespace:Power_Hand.Features.FeatureApp.FeatureEditItem"
            d:DataContext="{d:DesignInstance Type=feature:AddEditItemPageVM}"
            xmlns:components="clr-namespace:Power_Hand.Utils.Component"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <feature:ItemFormView Grid.Column="0" DataContext="{Binding ItemFormVM}"/>

            <components:ItemsGridView Grid.Column="1" DataContext="{Binding GridItemsVM}" />

    </Grid>
    
</UserControl>
