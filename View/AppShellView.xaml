<UserControl x:Class="Power_Hand.View.AppShellView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Views="clr-namespace:Power_Hand.View"
             mc:Ignorable="d" 
             xmlns:viewmodels="clr-namespace:Power_Hand.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels: AppShellVM}"
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Views:NavigationBarView Grid.Row="0" DataContext="{Binding NavigationVM}" />

        <Grid Grid.Row="1">
            <ContentControl Visibility="Visible" Content="{Binding NavigationService.CurrentView}"/>
            
            <ContentControl Visibility="Collapsed" Content="{Binding NavigationService.PopupView}"/>
        </Grid>
    </Grid>
</UserControl>
