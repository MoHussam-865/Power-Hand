<Application x:Class="Power_Hand.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Power_Hand"
             xmlns:vm="clr-namespace:Power_Hand.ViewModels"
             xmlns:View="clr-namespace:Power_Hand.View">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="View/Styles/CalculatorBtn.xaml"/>
                <ResourceDictionary Source="View/Styles/ControllBtns.xaml"/>
            </ResourceDictionary.MergedDictionaries>




            <DataTemplate DataType="{x:Type TypeName=vm:CasherVM}">
                <View:CasherView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type TypeName=vm:HomeVM}">
                <View:HomeView/>
            </DataTemplate>

        </ResourceDictionary>

        
         
    </Application.Resources>
</Application>
